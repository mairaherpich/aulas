    <script>
        var a = Number(prompt("digite quantos anos vc tem: "));
        var m = Number(prompt("E quantos meses: "));
        var d = Number(prompt("e quantos dias: "));

        var sa = a * 365;
        var sm = m * 30;
        var soma = sa + sm + d; 

        alert("voce possui " + soma + " dias de vida")
    </script>
